{
  "name": "synapse-proto",
  "private": true,
  "type": "module",
  "scripts": {
    "server": "tsx src/server.ts",
    "agent": "tsx src/agent.ts",
    "sim": "tsx src/sim.ts",
    "dev": "npm run dash:build && tsx src/dev.ts",
    "dash:dev": "vite --config vite.config.ts",
    "dash:build": "vite build --config vite.config.ts",
    "dash:preview": "vite preview --config vite.config.ts",
    "build": "tsc -p tsconfig.json && npm run dash:build",
    "start": "node dist/sim.js",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "verify:coding": "tsx scripts/verify-coding.ts",
    "gh:bot": "tsx scripts/gh-bot.ts"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "openai": "^6.17.0",
    "pg": "^8.11.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.0.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.1",
    "vitest": "^1.3.1",
    "zod": "^3.22.4"
  }
}
